<h2>Add New Course</h2>
<div class="container">
    @{ Html.BeginForm();}
    <div class="row">
        <div class="col-lg-3">
            @Html.Label("Enter Course Name:")
        </div>
        <div class="col-lg-3">
            @Html.TextBox("name");
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            @Html.Label("Enter Course Fees:")
        </div>
        <div class="col-lg-3">
            @Html.TextBox("Fees");
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
        </div>
        <div class="col-lg-3">
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </div>
    @{ Html.EndForm();}
</div>